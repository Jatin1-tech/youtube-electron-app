{
  "name": "youtube-app",
  "version": "1.0.0",
  "description": "YouTube Desktop Application",
  "author": "Your Name",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "node launcher.js",
    "dev": "electron .",
    "build-win": "electron-builder --win",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.youtube.desktop",
    "productName": "YouTube",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "youtube.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron": "^28.2.2"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}